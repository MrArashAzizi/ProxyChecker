<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProxyChecker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#232C31</item>
        <item name="colorPrimaryVariant">#1F262B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#29343A</item>
        <item name="colorSecondaryVariant">#29343A</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyles</item>
    </style>

    <style name="AppModalStyles" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_background_for_btm</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">#1F262B</item>
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#1F262B</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#485861</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#485861</item>
    </style>
</resources>