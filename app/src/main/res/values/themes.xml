<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProxyChecker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#232C31</item>
        <item name="colorPrimaryVariant">#1F262B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#29343A</item>
        <item name="colorSecondaryVariant">#29343A</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyles</item>
    </style>

    <style name="AppModalStyles" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_background_for_btm</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#25313A</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textColorPrimary">#25313A</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#25313A</item>
        <item name="android:textSize">14sp</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p" >8dp</item>
    </style>
</resources>